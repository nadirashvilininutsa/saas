<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { role: "form", class: 'cc_form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group mt-3 col-md-6">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first name", class: 'form-control' %>
    </div>

    <div class="form-group mt-3 col-md-6">
      <%= f.label :last_name %><br />
      <%=  f.text_field :last_name, autofocus: true, autocomplete: "last name", class: 'form-control' %>
    </div>
  </div>

  <% resource.class.invite_key_fields.each do |field| %>
    <div class="form-group mt-3">
      <%= f.label field %><br />
      <%= f.text_field field, autocomplete: "email", class: 'form-control' %>
    </div>
  <% end %>

  <div class="form-group mt-3">
    <%= "Role" %><br />
    <% @roles.each do |role| %>
      <% if role.name.downcase != "super admin" %>
        <div class="form-check form-check-inline">
          <%= f.radio_button :role_id, role.id, class: 'form-check-input', id: "role_#{role.id}" %>
          <%= f.label :role_id, role.name, class: 'form-check-label mr-3', for: "role_#{role.id}" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="actions mt-3">
    <%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-outline-success' %>
  </div>
<% end %>





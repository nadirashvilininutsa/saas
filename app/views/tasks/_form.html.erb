<%= form_for [@project, Task.new], url: project_tasks_path(@project), html: { multipart: true, class: "form-horizontal" } do |form| %>

  
  <div class="control-group">
    <%= form.label :title, class: "control-label" %>
    <div class="controls">
      <%= form.text_field :title, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="control-group">
    <%= form.label :description, class: "control-label" %>
    <div class="controls">
      <%= form.text_area :description, required: true, class: "form-control" %>
    </div>
  </div>
  
  <div class="my-3">
    <%= form.submit nil, class: "btn btn-primary" %>
    <%= link_to t(".cancel", default: t("helpers.links.cancel")), project_path(@project), class: "btn btn-default" %>
  </div>
<% end %>
